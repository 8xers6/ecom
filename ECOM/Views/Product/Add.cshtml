@model ProductViewModel
<h1>Add Product</h1>
<form method="post" enctype="multipart/form-data">

    <div class="mt-3">
        <label class="form-label">Product Name</label>
        <input type="text" class="form-control" asp-for="product_name" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="customFile">Default file input example</label>
        <input type="file" class="form-control" id="customFile" asp-for="ImageFile" />
    </div>
    <div class="mt-3">
        <label class="form-label">Product Description</label>
        <input type="text" class="form-control" asp-for="product_description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Product Stocks</label>
        <input type="text"  class="form-control" asp-for="product_stocks" />
    </div>
    <div class="mt-3">
        <label class="form-label">product_variant</label>
        <input type="text" class="form-control" asp-for="product_variant" />
    </div>
    <div class="mt-3">
        <label class="form-label">product_price</label>
        <input type="number" class="form-control" asp-for="product_price" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Add Resident</button>
    </div>
</form>


